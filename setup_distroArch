#!/bin/bash

# ==========================================
# SCRIPT DE CONFIGURAÇÃO AUTOMÁTICA ARCH
# ==========================================

# Cores para facilitar a visualização
GREEN='\033[0;32m'
CYAN='\033[0;36m'
YELLOW='\033[1;33m'
NC='\033[0m' # No Color

# Função para logs bonitos
log() {
    echo -e "${CYAN}[INFO]${NC} $1"
}

warn() {
    echo -e "${YELLOW}[AVISO]${NC} $1"
}

success() {
    echo -e "${GREEN}[OK]${NC} $1"
}

# ----------------------------------------------------------------------
# 1. Instalação de Pacotes Essenciais
# ----------------------------------------------------------------------
log "Verificando pacotes essenciais..."

# Adicionei 'gnome-keyring' pois seu .zshrc depende dele
PACKAGES=(
    git curl base-devel dkms perl xz libffi
    wget pulseaudio gcc make mariadb-libs
    openssl zlib bzip2 readline sqlite llvm
    ncurses python-pyopenssl tk fastfetch nano
    gnome-keyring zsh
)

# --needed: Só instala se o pacote não estiver atualizado ou presente
if sudo pacman -S --needed --noconfirm "${PACKAGES[@]}"; then
    success "Pacotes essenciais verificados/instalados."
else
    warn "Houve um problema na instalação dos pacotes. Verifique sua conexão."
fi

# ----------------------------------------------------------------------
# 2. Configuração do Shell Padrão (ZSH)
# ----------------------------------------------------------------------
log "Configurando Zsh como shell padrão..."

if [[ "$SHELL" == */bin/zsh ]]; then
    success "O shell padrão já é o Zsh."
else
    if sudo chsh -s /bin/zsh "$USER"; then
        success "Shell alterado para Zsh com sucesso."
    else
        warn "Não foi possível alterar o shell automaticamente. Pode ser necessário senha."
    fi
fi

# ----------------------------------------------------------------------
# 3. Instalação do Oh-My-Zsh e Plugins
# ----------------------------------------------------------------------
OMZ_DIR="$HOME/.oh-my-zsh"

if [ -d "$OMZ_DIR" ]; then
    success "Oh-My-Zsh já está instalado em $OMZ_DIR."
else
    log "Instalando Oh-My-Zsh..."
    # --unattended: Não entra no zsh logo após instalar, permitindo o script continuar
    sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" "" --unattended
fi

# Instalação dos Plugins
ZSH_CUSTOM="${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}"

# Plugin: Syntax Highlighting
if [ -d "$ZSH_CUSTOM/plugins/zsh-syntax-highlighting" ]; then
    success "Plugin zsh-syntax-highlighting já existe."
else
    log "Baixando zsh-syntax-highlighting..."
    git clone https://github.com/zsh-users/zsh-syntax-highlighting.git "$ZSH_CUSTOM/plugins/zsh-syntax-highlighting"
fi

# Plugin: Autosuggestions
if [ -d "$ZSH_CUSTOM/plugins/zsh-autosuggestions" ]; then
    success "Plugin zsh-autosuggestions já existe."
else
    log "Baixando zsh-autosuggestions..."
    git clone https://github.com/zsh-users/zsh-autosuggestions "$ZSH_CUSTOM/plugins/zsh-autosuggestions"
fi

# ----------------------------------------------------------------------
# 4. Configuração do arquivo .zshrc (COMPLETO)
# ----------------------------------------------------------------------
ZSHRC_FILE="$HOME/.zshrc"
MARKER="# --- CORRECAO_MINECRAFT_INSTALADA ---"

# Verifica se o arquivo já tem nossa marca especial para não sobrescrever à toa
if grep -q "$MARKER" "$ZSHRC_FILE" 2>/dev/null; then
    success "O arquivo .zshrc já está configurado com as correções. Pulando etapa."
else
    log "Reescrevendo .zshrc com o modelo completo e correções..."
    
    # Backup de segurança
    if [ -f "$ZSHRC_FILE" ]; then
        cp "$ZSHRC_FILE" "$ZSHRC_FILE.bkp.$(date +%s)"
        log "Backup criado em $ZSHRC_FILE.bkp..."
    fi

    # Gravação do novo arquivo (Versão Completa)
    cat > "$ZSHRC_FILE" << 'EOF'
# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:$HOME/.local/bin:/usr/local/bin:$PATH

# Path to your Oh My Zsh installation.
export ZSH="$HOME/.oh-my-zsh"

# Set name of the theme to load --- if set to "random", it will
# load a random theme each time Oh My Zsh is loaded, in which case,
# to know which specific one was loaded, run: echo $RANDOM_THEME
# See https://github.com/ohmyzsh/ohmyzsh/wiki/Themes
ZSH_THEME="bira"

# Set list of themes to pick from when loading at random
# Setting this variable when ZSH_THEME=random will cause zsh to load
# a theme from this variable instead of looking in $ZSH/themes/
# If set to an empty array, this variable will have no effect.
# ZSH_THEME_RANDOM_CANDIDATES=( "robbyrussell" "agnoster" )

# Uncomment the following line to use case-sensitive completion.
# CASE_SENSITIVE="true"

# Uncomment the following line to use hyphen-insensitive completion.
# Case-sensitive completion must be off. _ and - will be interchangeable.
# HYPHEN_INSENSITIVE="true"

# Uncomment one of the following lines to change the auto-update behavior
# zstyle ':omz:update' mode disabled  # disable automatic updates
# zstyle ':omz:update' mode auto      # update automatically without asking
# zstyle ':omz:update' mode reminder  # just remind me to update when it's time

# Uncomment the following line to change how often to auto-update (in days).
# zstyle ':omz:update' frequency 13

# Uncomment the following line if pasting URLs and other text is messed up.
# DISABLE_MAGIC_FUNCTIONS="true"

# Uncomment the following line to disable colors in ls.
# DISABLE_LS_COLORS="true"

# Uncomment the following line to disable auto-setting terminal title.
# DISABLE_AUTO_TITLE="true"

# Uncomment the following line to enable command auto-correction.
# ENABLE_CORRECTION="true"

# Uncomment the following line to display red dots whilst waiting for completion.
# You can also set it to another string to have that shown instead of the default red dots.
# e.g. COMPLETION_WAITING_DOTS="%F{yellow}waiting...%f"
# Caution: this setting can cause issues with multiline prompts in zsh < 5.7.1 (see #5765)
# COMPLETION_WAITING_DOTS="true"

# Uncomment the following line if you want to disable marking untracked files
# under VCS as dirty. This makes repository status check for large repositories
# much, much faster.
# DISABLE_UNTRACKED_FILES_DIRTY="true"

# Uncomment the following line if you want to change the command execution time
# stamp shown in the history command output.
# You can set one of the optional three formats:
# "mm/dd/yyyy"|"dd.mm.yyyy"|"yyyy-mm-dd"
# or set a custom format using the strftime function format specifications,
# see 'man strftime' for details.
# HIST_STAMPS="mm/dd/yyyy"

# Would you like to use another custom folder than $ZSH/custom?
# ZSH_CUSTOM=/path/to/new-custom-folder

# Which plugins would you like to load?
# Standard plugins can be found in $ZSH/plugins/
# Custom plugins may be added to $ZSH_CUSTOM/plugins/
# Example format: plugins=(rails git textmate ruby lighthouse)
# Add wisely, as too many plugins slow down shell startup.
plugins=(git zsh-autosuggestions zsh-syntax-highlighting)

source $ZSH/oh-my-zsh.sh

# User configuration

# export MANPATH="/usr/local/man:$MANPATH"

# You may need to manually set your language environment
# export LANG=en_US.UTF-8

# Preferred editor for local and remote sessions
# if [[ -n $SSH_CONNECTION ]]; then
#   export EDITOR='vim'
# else
#   export EDITOR='nvim'
# fi

# Compilation flags
# export ARCHFLAGS="-arch $(uname -m)"

# Set personal aliases, overriding those provided by Oh My Zsh libs,
# plugins, and themes. Aliases can be placed here, though Oh My Zsh
# users are encouraged to define aliases within a top-level file in
# the $ZSH_CUSTOM folder, with .zsh extension. Examples:
# - $ZSH_CUSTOM/aliases.zsh
# - $ZSH_CUSTOM/macos.zsh
# For a full list of active aliases, run `alias`.
#
# Example aliases
# alias zshconfig="mate ~/.zshrc"
# alias ohmyzsh="mate ~/.oh-my-zsh"
#
# Mudar diretório inicial automaticamente
cd ~/

# --- CORRECAO_MINECRAFT_INSTALADA ---
# --- INICIO DA CORREÇÃO MINECRAFT (Distrobox) ---

# 1. Define uma pasta LOCAL para o chaveiro
# Isso evita erros de permissão no /run/user/host
export GNOME_KEYRING_CONTROL="$HOME/.cache/keyring-local"
mkdir -p "$GNOME_KEYRING_CONTROL"
chmod 700 "$GNOME_KEYRING_CONTROL"

# 2. Inicia o daemon
# REMOVIDO: "--replace" (pois conflita com --start e mata sessões anteriores)
# ADICIONADO: "2>/dev/null" (para esconder o aviso chato de 'insecure memory')
eval $(gnome-keyring-daemon --start --components=secrets,ssh,pkcs11 2>/dev/null)

# 3. Exporta as variáveis necessárias para o Minecraft/Java
export SSH_AUTH_SOCK
export GNOME_KEYRING_CONTROL

# --- FIM DA CORREÇÃO MINECRAFT ---
EOF
    success ".zshrc atualizado com a versão completa."
fi

# ----------------------------------------------------------------------
# 5. Instalação do Pyenv e Python 3.13
# ----------------------------------------------------------------------
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"

if [ -d "$PYENV_ROOT" ]; then
    success "Pyenv já está instalado."
else
    log "Instalando Pyenv..."
    curl https://pyenv.run | bash
fi

# Carrega o pyenv temporariamente para esta sessão do script
eval "$(pyenv init -)"

PYTHON_VERSION="3.13.0"

if pyenv versions | grep -q "$PYTHON_VERSION"; then
    success "Python $PYTHON_VERSION já está instalado no Pyenv."
else
    log "Instalando Python $PYTHON_VERSION (isso pode demorar)..."
    pyenv install "$PYTHON_VERSION"
fi

log "Definindo Python $PYTHON_VERSION como global..."
pyenv global "$PYTHON_VERSION"

# Verifica se o tkinter funciona
log "Verificando Tkinter..."
python -c "import tkinter; print('Tkinter OK')" 2>/dev/null || warn "Erro ao importar Tkinter. Verifique dependências."

# ----------------------------------------------------------------------
# 6. Instalação do Visual Studio Code (AUR)
# ----------------------------------------------------------------------
if command -v code &> /dev/null; then
    success "Visual Studio Code já está instalado."
else
    log "Instalando Visual Studio Code via AUR..."
    
    # Prepara diretório temporário
    BUILD_DIR="$HOME/Downloads/vscode-build"
    mkdir -p "$BUILD_DIR"
    
    if [ -d "$BUILD_DIR/visual-studio-code-bin" ]; then
        rm -rf "$BUILD_DIR/visual-studio-code-bin"
    fi
    
    git clone https://aur.archlinux.org/visual-studio-code-bin.git "$BUILD_DIR/visual-studio-code-bin"
    
    cd "$BUILD_DIR/visual-studio-code-bin" || exit
    
    # Instala sem pedir confirmação
    makepkg -si --noconfirm
    
    cd ~
    rm -rf "$BUILD_DIR"
    success "VS Code instalado."
fi

# ----------------------------------------------------------------------
# 7. Finalização
# ----------------------------------------------------------------------
log "Processo concluído com sucesso!"
log "Recarregando o Zsh agora..."

# Substitui o processo atual pelo Zsh (Deve ser a ÚLTIMA linha)
exec zsh
