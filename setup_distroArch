#!/bin/bash

# ==========================================
# SCRIPT DE CONFIGURAÇÃO AUTOMÁTICA ARCH
# ==========================================

# Cores
GREEN='\033[0;32m'
CYAN='\033[0;36m'
YELLOW='\033[1;33m'
RED='\033[0;31m'
NC='\033[0m' # No Color

# Funções de Log
log() { echo -e "${CYAN}[INFO]${NC} $1"; }
warn() { echo -e "${YELLOW}[AVISO]${NC} $1"; }
success() { echo -e "${GREEN}[OK]${NC} $1"; }
error() { echo -e "${RED}[ERRO]${NC} $1"; }

# ----------------------------------------------------------------------
# 0. Verificação de Pré-requisitos (Sudo/Senha)
# ----------------------------------------------------------------------
log "Passo 0: Verificando permissões de administrador (Sudo)..."

# Verifica o status da senha do usuário atual
# NP = No Password (Sem senha definida)
USER_PASS_STATUS=$(passwd -S $(whoami) | awk '{print $2}')

if [ "$USER_PASS_STATUS" == "NP" ]; then
    warn "Você ainda não possui uma senha definida para o usuário '$(whoami)'."
    warn "O script precisa de permissão 'sudo' para instalar pacotes."
    echo -e "${YELLOW}>>> Por favor, defina uma senha agora:${NC}"
    
    # Chama o comando para criar senha
    passwd
    
    if [ $? -ne 0 ]; then
        error "Falha ao definir a senha. O script não pode continuar."
        exit 1
    fi
    success "Senha definida com sucesso!"
else
    success "Usuário já possui senha configurada."
fi

# Testa o sudo imediatamente para garantir que funciona e já deixa em cache
log "Validando acesso sudo..."
if sudo -v; then
    success "Acesso Sudo confirmado."
else
    error "Não foi possível autenticar com sudo. Verifique sua senha."
    exit 1
fi

# ----------------------------------------------------------------------
# 1. Instalação de Pacotes Essenciais
# ----------------------------------------------------------------------
log "Verificando pacotes essenciais..."

PACKAGES=(
    git curl base-devel dkms perl xz libffi
    wget pulseaudio gcc make mariadb-libs
    openssl zlib bzip2 readline sqlite llvm
    ncurses python-pyopenssl tk fastfetch nano
    gnome-keyring zsh
)

if sudo pacman -S --needed --noconfirm "${PACKAGES[@]}"; then
    success "Pacotes essenciais verificados/instalados."
else
    error "Houve um problema na instalação dos pacotes. Verifique sua conexão."
    exit 1
fi

# ----------------------------------------------------------------------
# 2. Configuração do Shell Padrão (ZSH)
# ----------------------------------------------------------------------
log "Configurando Zsh como shell padrão..."

if [[ "$SHELL" == */bin/zsh ]]; then
    success "O shell padrão já é o Zsh."
else
    # O sudo aqui é necessário para alterar o /etc/passwd
    if sudo chsh -s /bin/zsh "$USER"; then
        success "Shell alterado para Zsh com sucesso."
    else
        warn "Não foi possível alterar o shell automaticamente via script."
    fi
fi

# ----------------------------------------------------------------------
# 3. Instalação do Oh-My-Zsh e Plugins
# ----------------------------------------------------------------------
OMZ_DIR="$HOME/.oh-my-zsh"

if [ -d "$OMZ_DIR" ]; then
    success "Oh-My-Zsh já está instalado."
else
    log "Instalando Oh-My-Zsh..."
    sh -c "$(curl -fsSL https://raw.github.com/ohmyzsh/ohmyzsh/master/tools/install.sh)" "" --unattended
fi

ZSH_CUSTOM="${ZSH_CUSTOM:-$HOME/.oh-my-zsh/custom}"

# Plugins
if [ -d "$ZSH_CUSTOM/plugins/zsh-syntax-highlighting" ]; then
    success "Plugin zsh-syntax-highlighting já existe."
else
    log "Baixando zsh-syntax-highlighting..."
    git clone https://github.com/zsh-users/zsh-syntax-highlighting.git "$ZSH_CUSTOM/plugins/zsh-syntax-highlighting"
fi

if [ -d "$ZSH_CUSTOM/plugins/zsh-autosuggestions" ]; then
    success "Plugin zsh-autosuggestions já existe."
else
    log "Baixando zsh-autosuggestions..."
    git clone https://github.com/zsh-users/zsh-autosuggestions "$ZSH_CUSTOM/plugins/zsh-autosuggestions"
fi

# ----------------------------------------------------------------------
# 4. Configuração do arquivo .zshrc
# ----------------------------------------------------------------------
ZSHRC_FILE="$HOME/.zshrc"
MARKER="# --- CORRECAO_MINECRAFT_INSTALADA ---"

if grep -q "$MARKER" "$ZSHRC_FILE" 2>/dev/null; then
    success ".zshrc já configurado. Pulando."
else
    log "Reescrevendo .zshrc (Modelo Completo)..."
    
    if [ -f "$ZSHRC_FILE" ]; then
        cp "$ZSHRC_FILE" "$ZSHRC_FILE.bkp.$(date +%s)"
    fi

    cat > "$ZSHRC_FILE" << 'EOF'
# If you come from bash you might have to change your $PATH.
# export PATH=$HOME/bin:$HOME/.local/bin:/usr/local/bin:$PATH

export ZSH="$HOME/.oh-my-zsh"

ZSH_THEME="bira"

plugins=(git zsh-autosuggestions zsh-syntax-highlighting)

source $ZSH/oh-my-zsh.sh

# User configuration
cd ~/

# --- CORRECAO_MINECRAFT_INSTALADA ---
# --- INICIO DA CORREÇÃO MINECRAFT (Distrobox) ---

export GNOME_KEYRING_CONTROL="$HOME/.cache/keyring-local"
mkdir -p "$GNOME_KEYRING_CONTROL"
chmod 700 "$GNOME_KEYRING_CONTROL"

# Inicia o daemon silenciando avisos de insecure memory
eval $(gnome-keyring-daemon --start --components=secrets,ssh,pkcs11 2>/dev/null)

export SSH_AUTH_SOCK
export GNOME_KEYRING_CONTROL

# --- FIM DA CORREÇÃO MINECRAFT ---
EOF
    success ".zshrc atualizado."
fi

# ----------------------------------------------------------------------
# 5. Instalação do Pyenv e Python 3.13
# ----------------------------------------------------------------------
export PYENV_ROOT="$HOME/.pyenv"
export PATH="$PYENV_ROOT/bin:$PATH"

if [ -d "$PYENV_ROOT" ]; then
    success "Pyenv já está instalado."
else
    log "Instalando Pyenv..."
    curl https://pyenv.run | bash
fi

eval "$(pyenv init -)"

PYTHON_VERSION="3.13.0"

if pyenv versions | grep -q "$PYTHON_VERSION"; then
    success "Python $PYTHON_VERSION já instalado."
else
    log "Instalando Python $PYTHON_VERSION (isso pode demorar)..."
    pyenv install "$PYTHON_VERSION"
fi

pyenv global "$PYTHON_VERSION"

log "Verificando Tkinter..."
python -c "import tkinter; print('Tkinter OK')" 2>/dev/null || warn "Aviso: Tkinter pode não estar ativo."

# ----------------------------------------------------------------------
# 6. Instalação do Visual Studio Code (AUR)
# ----------------------------------------------------------------------
if command -v code &> /dev/null; then
    success "Visual Studio Code já está instalado."
else
    log "Instalando Visual Studio Code via AUR..."
    
    BUILD_DIR="$HOME/Downloads/vscode-build"
    mkdir -p "$BUILD_DIR"
    
    # Remove lixo anterior se houver
    rm -rf "$BUILD_DIR/visual-studio-code-bin"
    
    git clone https://aur.archlinux.org/visual-studio-code-bin.git "$BUILD_DIR/visual-studio-code-bin"
    
    cd "$BUILD_DIR/visual-studio-code-bin" || exit
    
    # O makepkg -si vai pedir SUDO internamente para instalar
    log "Compilando pacote (pode pedir senha sudo)..."
    makepkg -si --noconfirm
    
    cd ~
    rm -rf "$BUILD_DIR"
    success "VS Code instalado."
fi

# ----------------------------------------------------------------------
# 7. Finalização
# ----------------------------------------------------------------------
log "Processo concluído!"
log "Recarregando shell..."
exec zsh
